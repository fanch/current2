# Depends on: python 
name=python-beautifulsoup3
version=3.2.1
release=1

source=(
http://www.crummy.com/software/BeautifulSoup/download/3.x/BeautifulSoup-$version.tar.gz)

build() {
    cd BeautifulSoup-$version
    python2 setup.py install --prefix=/usr --root=$PKG
}



